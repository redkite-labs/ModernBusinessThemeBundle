        <div class="col-md-2 col-sm-4 col-xs-6">           
            {{ block('about_customers_box_4') }}
        </div>

        <div class="col-md-2 col-sm-4 col-xs-6">           
            {{ block('about_customers_box_5') }}
        </div>

        <div class="col-md-2 col-sm-4 col-xs-6">           
            {{ block('about_customers_box_6') }}
        </div>

    </div>

</div>
